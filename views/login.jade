h1 Login Page

div#login-form.form
    form(action='/login', method='post')
        input(type='hidden', name='_csrf', value='#{csrf_token}')
        div.input-block
            h6.short-label Email*
            input#email.short-field(type='text', name='username', value='')
        div.input-block
            h6.short-label Password*
                input#password.short-field(type='password', name='password', value='')
        div.clear
            input#comment-button.button(type='submit', name='submit', value='Submit')
div.spacer
